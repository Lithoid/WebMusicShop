@using BL;



@model IEnumerable<ProductViewModel>

<div class="card h-100">
    <div class="card-header">
        Your wish list
    </div>

    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div class="row">

                        <div class="col-md-3 text-center justify-content-center align-items-center">
                            <img class="card-img-bottom" src="~/api/Asset/@item.ImageIds[0]" alt="Card image cap">
                        </div>
                        <div class="col-md-6">
                            <p class="text-muted mb-0 ">@item.CategoryName @item.BrandName @item.Name</p>

                            <div class="mt-lg-5">
                                <h3 class="d-inline text-center">@item.RetailPrice</h3>
                                <a asp-controller="CartItem" asp-action="Add" asp-route-id="@item.Id" class="btn btn-dark btn-rounded mr-1 d-inline" data-toggle="tooltip" title="" data-original-title="Add to cart">
                                    <i class="bi bi-cart"></i>
                                </a>
                                <button type="button" onclick="removeFavourite(`@item.Id`)" class="btn btn-dark btn-circle btn-sm float-right "><i class="bi bi-trash"></i></button>
                            </div>

                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>



@model CreateEditProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="AcceptEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Id" class="control-label"></label>
                <input asp-for="Product.Id" readonly class="form-control" />
                <span asp-validation-for="Product.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.About" class="control-label"></label>
                <input asp-for="Product.About" class="form-control" />
                <span asp-validation-for="Product.About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Product.RetailPrice" class="control-label"></label>
                <input asp-for="Product.RetailPrice" class="form-control" />
                <span asp-validation-for="Product.RetailPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.BrandId" class="control-label"></label>
                <select asp-for="Product.BrandId" class="form-control">
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-8">
                <div id="carouselEdit" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @if (Model.Product.ImageIds.Count > 0)
                        {
                            @for (int i = 0; i < Model.Product.ImageIds.Count; ++i)
                            {
                                string actClass = i == 0 ? "active" : "";

                                <div class="carousel-item @actClass">
                                    <img class="d-block w-100" src="~/api/Asset/@Model.Product.ImageIds[i]" alt="slide">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/images/No_image_available.png" alt="slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselEdit" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselEdit" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Save">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>
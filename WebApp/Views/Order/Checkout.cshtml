

@model CheckoutViewModel


<div class="row d-flex justify-content-center align-items-center h-100 mt-4">
    <div class="col-lg-6 col-xl-6">
        <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-sm order-2 order-lg-1">

                        <h4 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Payment</h4>

                        <form asp-action="Checkout" method="post">
                            <div class="d-block my-3">
                                <div class="custom-control custom-radio">
                                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                                    <label class="custom-control-label" for="credit">Credit card</label>
                                </div>
                            </div>
                            <input asp-for="RelatedOrderId" hidden value="@ViewBag.OrderId" class="form-control" />
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="OwnerName"></label>
                                    <input asp-for="OwnerName" class="form-control" />
                                    <small class="text-muted">Full name as displayed on card</small>
                                    <span asp-validation-for="OwnerName" class="text-danger"></span>
             
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CardNumber"></label>
                                    <input asp-for="CardNumber" class="form-control" />
                                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label asp-for="ExpirationDate"></label>
                                    <input asp-for="ExpirationDate" class="form-control" />
                                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label asp-for="CVV"></label>
                                    <input asp-for="CVV" class="form-control" />
                                    <span asp-validation-for="CVV" class="text-danger"></span>
                                </div>
                            </div>
                            <hr class="mb-4">
                            <input class="btn btn-primary btn-lg btn-block" value="Checkout" type="submit"/>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
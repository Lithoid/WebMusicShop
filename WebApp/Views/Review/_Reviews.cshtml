@using BL
@model IEnumerable<ReviewViewModel>


<h1>TEST</h1>
@foreach (var item in Model )
{
    <div class="reviews-members pt-4 pb-4">
        <div class="media">
            <div class="media-body">
                <div class="reviews-members-header">
                    <span class=" float-right">
                        @item.Rate
                    </span>
                    @if (User.IsInRole("Admin"))
                    {
                        <button class="btn btn-danger btn-rounded mr-1 float-right" onclick="deleteReview(`@item.Id`)"><i class="bi bi-trash"></i></button>
                    }
                    
                    <h6 class="mb-1">@item.UserName</h6>
                    <small class="text-secondary">@item.Date.ToString("dddd, dd MMMM yyyy")</small>
                </div>
                <div class="reviews-members-body">
                    <p>@item.Text</p>
                </div>
                <div class="reviews-members-footer">
                    <button class="btn btn-info btn-rounded mr-1" onclick="likeReview(`@item.Id`)"><i class="bi bi-hand-thumbs-up"></i> @item.Likes</button>
                </div>
                
            </div>
        </div>
    </div>
    <hr>
}

@section Scripts{
    <script>
        
    </script>
        
}